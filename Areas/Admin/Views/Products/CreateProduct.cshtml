@using DonutsShopApp.Data.Models.Enum;
@using DonutsShopApp.Admin.ViewModels;
@model ProductInputModel
@{
    ViewData["Title"] = "Create Product";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main class="mt-3 mb-5">
    <h1 class="text-center">@ViewData["Title"]</h1>
    <hr class="hr-2 bg-dark" />
    <form class="mx-auto half-width" method="post" asp-area="Admin" asp-controller="Products" asp-action="CreateProduct">
        <div class="form-group">
            <label for="name">Title</label>
            <input asp-for="Title" class="form-control" id="title" placeholder="Title..." name="Title">
        </div>
        <div class="form-group">
            <label for="name">Subtitle</label>
            <input asp-for="Subtitle" class="form-control" id="subtitle" placeholder="Subtitle..." name="Subtitle">
        </div>
        <div class="form-group">
            <label for="price">Price</label>
            <input asp-for="Price" class="form-control" id="price" placeholder="Price..." name="Price">
        </div>
        <div class="form-group">
            <label asp-for="ProductType">Select Product Type:</label>
            <select class="form-control" id="productType" name="ProductType">
                @foreach (ProductType typeProduct in Enum.GetValues(typeof(ProductType)))
                {
                    <option>@typeProduct</option>
                }
            </select>
        </div>
        <div class="form-group">
            <label for="sel1">Select Food Type:</label>
            <select asp-for="FoodType" class="form-control" id="foodType" name="FoodType">
                @foreach (FoodType typeFood in Enum.GetValues(typeof(FoodType)))
                {
                    <option>@typeFood</option>
                }
            </select>
        </div>
        <div class="form-group">
            <label for="description">Description</label>
            <textarea class="form-control" id="description" rows="4" placeholder="Description..." name="Description"></textarea>
        </div>
        <div asp-controller="CreateProduct" asp-action="UploadFile" method="post"
             enctype="multipart/form-data">
            <input asp-for="Image" type="file" name="Image" />
        </div>
        <div class="button-holder mt-2 d-flex justify-content-center">
            <button type="submit">Create</button>
        </div>
    </form>
</main>